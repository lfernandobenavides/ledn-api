{
  "name": "ledn-api",
  "version": "1.0.0",
  "description": "Ledn API",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch \"*.ts\" --exec \"ts-node\" ./src/index.ts",
    "eslint:fix": "eslint --fix",
    "test": "NODE_ENV=test jest --forceExit --detectOpenHandles"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.3",
    "@types/jsonstream": "^0.8.30",
    "@types/mockingoose": "^2.13.0",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "jest": "^27.4.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "JSONStream": "^1.3.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mockingoose": "^2.15.2",
    "mongoose": "^5.12.1",
    "ts-jest": "^27.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/*.+(ts|tsx|js)"
    ]
  }
